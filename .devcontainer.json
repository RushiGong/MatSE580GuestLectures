{
    "image": "mcr.microsoft.com/devcontainers/miniconda",
    "customizations": {
      "codespaces": {
        "openFiles": [
          "README.md"
        ]
      },
      "vscode": {
        "extensions": [
          "wijmo.gc-excelviewer",
          "mechatroner.vscode_rainbow_csv",
          "ms-python.python",
          "ms-toolsai.jupyter",
          "hansvn.instant-mongo"
        ]
      }
    },
    "hostRequirements": {
       "cpus": 4,
       "memory": "16gb",
       "storage": "16gb"
    },
    "onCreateCommand": "conda install -y python=3.9.13 jupyter numpy && pip install pycalphad==0.10.2 espei==0.8.9 pydantic==1.10.4 pycalphad-xml"
}
